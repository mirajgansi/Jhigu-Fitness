<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/code_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:tint="@color/black"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jhigu Fitness"
        android:textColor="#FF4E4E"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your phone \nnumber"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="193dp" />

    <TextView
        android:id="@+id/otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will send an OTP verification code"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="263dp" />

    <EditText
        android:id="@+id/number"
        android:layout_width="396sp"
        android:layout_height="47sp"
        android:ems="10"
        android:inputType="number|numberSigned"
        android:hint=" Phone Number"
        tools:layout_editor_absoluteX="10sp"
        tools:layout_editor_absoluteY="300dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="396sp"
        android:layout_height="47sp"
        android:text="Send me the code"
        tools:layout_editor_absoluteX="10sp"
        tools:layout_editor_absoluteY="379sp" />

</androidx.constraintlayout.widget.ConstraintLayout>