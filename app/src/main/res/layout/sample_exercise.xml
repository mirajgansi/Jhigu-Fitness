<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardExercise"
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!-- Image (e.g., exercise icon) -->
            <ImageView
                android:id="@+id/getImageexe"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Text Container (to group text elements horizontally next to image) -->
            <LinearLayout
                android:id="@+id/textContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/getImageexe"
                app:layout_constraintEnd_toStartOf="@id/btnExerciseEdit"
                app:layout_constraintTop_toTopOf="@id/getImageexe"
                app:layout_constraintBottom_toBottomOf="@id/getImageexe">

                <TextView
                    android:id="@+id/displayExercisename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise name"
                    android:textSize="16sp"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/displayExerciseDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Exercise description"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/displayExerciseSets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Exercise sets"
                    android:textSize="14sp"
                    android:textColor="#757575" />

            </LinearLayout>

            <!-- Edit Button -->
            <TextView
                android:id="@+id/btnExerciseEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="14sp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/ExeProgressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/getImageexe"
                app:layout_constraintEnd_toEndOf="@id/getImageexe"
                app:layout_constraintTop_toTopOf="@id/getImageexe"
                app:layout_constraintBottom_toBottomOf="@id/getImageexe" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
