<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Workout Greeting -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, Subim Gautam"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"/>

    <!-- Workout Category Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABs Workouts"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>

    <!-- Workout Buttons -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kneeling Cable Crunches"
        android:textSize="16sp"
        android:background="#29292E"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Twisting Crunch"
        android:textSize="16sp"
        android:background="#29292E"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="External obliques"
        android:textSize="16sp"
        android:background="#29292E"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lying Leg Raises"
        android:textSize="16sp"
        android:background="#29292E"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"/>

    <!-- Start Workout Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Workout"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF5722"
        android:layout_marginTop="16dp"/>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        android:layout_gravity="bottom"/>

</LinearLayout>
